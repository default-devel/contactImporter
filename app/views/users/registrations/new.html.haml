.h-100.position-relative
  .position-absolute.top-50.start-50.translate-middle
    .card
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "users/shared/error_messages", resource: resource
        .card-header
          %h2 Sign up
        .card-body
          .field.pb-2
            = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', autocomplete: "email"
          .field.py-1
            = f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "current-password"
          - if devise_mapping.rememberable?
            .field.form-check
              = f.check_box :remember_me, class: 'form-check-input', id: 'recuerdame'
              = f.label :remember_me, class: 'form-check-label', for: 'recuerdame'
          .row.pt-2
            .col.text-start
              = render "users/shared/links"
            .col.text-end
              .actions
                = f.submit "Sign up", class: 'btn btn-primary'